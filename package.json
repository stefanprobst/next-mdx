{
  "name": "@stefanprobst/next-mdx",
  "version": "1.2.0",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "repository": "git@github.com:stefanprobst/next-mdx.git",
  "author": "Stefan Probst <stefanprobst@kolabnow.com>",
  "license": "MIT",
  "exports": {
    "./": "./src/index.js",
    "./jest": "./src/jest.js"
  },
  "files": [
    "src",
    "jest.js"
  ],
  "scripts": {
    "format": "prettier . -l --ignore-path .gitignore",
    "format:fix": "yarn format --write",
    "lint": "eslint . --ignore-path .gitignore",
    "lint:fix": "yarn lint --fix"
  },
  "dependencies": {
    "@mdx-js/loader": "^1.6.19",
    "@mdx-js/mdx": "^1.6.22",
    "gray-matter": "^4.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@stefanprobst/commitlint-config": "^1.0.1",
    "@stefanprobst/eslint-config-node": "^1.0.6",
    "@stefanprobst/prettier-config": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "next": "^10.0.1",
    "prettier": "^2.1.2",
    "react": "^17.0.1",
    "typescript": "^4.0.5"
  },
  "peerDependencies": {
    "babel-jest": "^26.0.0",
    "next": "^9.5.0||^10.0.0",
    "react": "^16.10.0||^17.0.0"
  },
  "peerDependenciesMeta": {
    "babel-jest": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=12.9",
    "yarn": "^1"
  },
  "commitlint": {
    "extends": [
      "@stefanprobst/commitlint-config"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@stefanprobst/eslint-config-node"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "overrides": [
      {
        "files": "*.d.ts",
        "rules": {
          "import/export": "off",
          "import/no-duplicates": "off"
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(js|ts)": "eslint --cache --fix",
    "*.(json|md)": "prettier --write"
  },
  "prettier": "@stefanprobst/prettier-config"
}
